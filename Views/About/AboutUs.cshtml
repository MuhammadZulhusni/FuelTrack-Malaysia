@{
    ViewData["Title"] = "About Us";
}

<style>
    :root {
        --primary-color: #0d6efd;
        --secondary-color: #6c757d;
        --accent-color: #198754;
        --light-bg: #f8f9fa;
        --gradient-primary: linear-gradient(135deg, #0d6efd 0%, #4c84ff 100%);
        --gradient-accent: linear-gradient(135deg, #198754 0%, #20c997 100%);
        --shadow-light: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        --shadow-medium: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        --shadow-heavy: 0 1rem 3rem rgba(0, 0, 0, 0.175);
    }

    /* Animation Keyframes */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Animation Class */
    .animate-on-load {
        animation: fadeInUp 1s ease-out forwards;
        opacity: 0; /* Initially hidden */
    }

    /* Staggered animation delays */
    .animate-on-load[data-delay="1"] { animation-delay: 0.2s; }
    .animate-on-load[data-delay="2"] { animation-delay: 0.4s; }
    .animate-on-load[data-delay="3"] { animation-delay: 0.6s; }
    .animate-on-load[data-delay="4"] { animation-delay: 0.8s; }
    .animate-on-load[data-delay="5"] { animation-delay: 1.0s; }
    .animate-on-load[data-delay="6"] { animation-delay: 1.2s; }
    .animate-on-load[data-delay="7"] { animation-delay: 1.4s; }
    
    .hero-section {
        background: var(--gradient-primary);
        color: white;
        padding: 4rem 0 3rem;
        margin: -2rem -15px 3rem -15px;
        position: relative;
        overflow: hidden;
        border-radius: 0 0 2rem 2rem;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" fill="rgba(255,255,255,0.1)"><polygon points="0,0 1000,0 1000,100"/></svg>');
        opacity: 0.1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .stats-container {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        padding: 1.5rem;
        margin-top: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .stat-item {
        text-align: center;
        color: white;
    }

    .stat-number {
        font-size: 1.75rem;
        font-weight: bold;
        display: block;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        font-size: 0.8rem;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-enhanced {
        border: none;
        border-radius: 1.25rem;
        box-shadow: var(--shadow-medium);
        transition: all 0.3s ease;
        background: white;
        overflow: hidden;
        position: relative;
    }

    .card-enhanced::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-primary);
    }

    .card-enhanced:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-heavy);
    }

    .icon-wrapper {
        width: 60px;
        height: 60px;
        background: var(--gradient-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        margin-bottom: 1rem;
        position: relative;
    }

    .icon-wrapper::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--gradient-primary);
        opacity: 0.3;
        transform: scale(1.2);
        z-index: -1;
    }

    .team-card {
        border: none;
        border-radius: 1.5rem;
        box-shadow: var(--shadow-medium);
        transition: all 0.3s ease;
        overflow: hidden;
        background: white;
        position: relative;
    }

    .team-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-accent);
    }

    .team-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 1.5rem 4rem rgba(0, 0, 0, 0.2);
    }

    .team-image {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--primary-color);
        margin-bottom: 1.5rem;
        position: relative;
        transition: all 0.3s ease;
    }

    .team-card:hover .team-image {
        border-color: var(--accent-color);
        transform: scale(1.05);
    }

    .contact-btn {
        background: var(--gradient-primary);
        border: none;
        border-radius: 2rem;
        padding: 0.6rem 1.5rem;
        transition: all 0.3s ease;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.85rem;
    }

    .contact-btn:hover {
        background: var(--gradient-accent);
        transform: scale(1.05);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
    }

    .badge-skill {
        background: var(--gradient-accent);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 600;
        margin: 0.2rem;
        display: inline-block;
    }

    .section-divider {
        height: 2px;
        background: var(--gradient-primary);
        margin: 4rem auto;
        width: 60%;
        border-radius: 2px;
        opacity: 0.3;
    }

    .data-source-card {
        background: linear-gradient(135deg, #fff 0%, var(--light-bg) 100%);
        border: 2px solid #e9ecef;
        border-radius: 1.5rem;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-medium);
        transition: all 0.3s ease;
    }

    .data-source-card::before {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        background: var(--gradient-primary);
        border-radius: 1.5rem;
        z-index: -1;
        opacity: 0.8;
    }

    .trust-indicators {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        margin: 1.5rem 0;
        flex-wrap: wrap;
    }

    .trust-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: var(--primary-color);
    }

    .trust-item i {
        font-size: 1.2rem;
    }

    .official-link {
        background: var(--gradient-primary);
        color: white !important;
        padding: 0.8rem 2rem;
        border-radius: 2rem;
        text-decoration: none !important;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.9rem;
    }

    .official-link:hover {
        background: var(--gradient-accent);
        transform: scale(1.05);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 2rem 0;
            margin: -1rem -15px 2rem -15px;
        }
        
        .team-image {
            width: 120px;
            height: 120px;
        }

        .trust-indicators {
            gap: 1rem;
        }

        .stat-number {
            font-size: 1.5rem;
        }
    }
</style>

